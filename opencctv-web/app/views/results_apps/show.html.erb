<div class="container">
  <ol class="breadcrumb">
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'Results applications', results_apps_path %></li>
    <li class="active">Results application</li>
  </ol>
</div>

<%= render 'info' %>

<div class="container">
  <%= link_to 'Edit', edit_results_app_path(@results_app), :class => "btn btn-warning" %>
  <%= link_to 'Add Input File',new_results_app_input_file_path(@results_app), :class => "btn btn-success"%>
  <%= link_to 'Add Input Parameter',new_results_app_input_file_path(@results_app), :class => "btn btn-success"%>
</div>

<div class="container">
  <p><h2>Input parameters</h2>
    <!--<a href="<%#new_vms_camera_path(@vms)%>" class="btn btn-success"> <span class="glyphicon glyphicon-plus"></span> Add new Camera manually</a>-->
  <div class="media">
    <%if @results_app.results_app_parameters.empty?%>
        <div class="alert alert-warning">
          Currently no input parametaers are registered with this results application.
        </div>
    <%else%>
    <%end%>
  </p>
</div>
</div>

<div class="container">
  <p><h2>Input files</h2>
    <!--<a href="<%#new_vms_camera_path(@vms)%>" class="btn btn-success"> <span class="glyphicon glyphicon-plus"></span> Add new Camera manually</a>-->

  <div class="media">
    <%if @results_app.results_app_input_files.empty?%>
        <div class="alert alert-warning">
          Currently no input files are registered with this results application.
        </div>
    <%else%>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4>Results application input files</h4>
          </div>
          <div class="media">
            <table class="table table-hover">
              <thead>
              <tr>
                <th>#</th>
                <th>File type</th>
                <th>File name</th>
                <th colspan="3"></th>
              </tr>
              </thead>

              <tbody>
              <% i = 1 %>
              <% @results_app.results_app_input_files.each do |input_file| %>
                  <tr>
                    <td><%= i %></td>
                    <td><%= input_file.results_app_connector_file.name%></td>
                    <td><%= input_file.filename%></td>
                    <td><%= link_to 'Show', '#', class: "btn btn-xs btn-default"%></td>
                    <td><%= link_to 'Edit', '#', class: "btn btn-xs btn-warning" %>
                    <td><%= link_to 'Destroy', '#', method: :delete, class: "btn btn-xs btn-danger", data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                  <% i = i + 1 %>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
    <%end%>
  </div>
  </p>
</div>


