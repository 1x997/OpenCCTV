<div class="container">
  <ol class="breadcrumb">
    <li><%= link_to 'Home', root_path %></li>
    <li class="active">Results applications</li>
  </ol>
</div>

<div class="container">
  <h1>
    All registered results applications
    <a href="<%=new_results_app_path %>" class="btn btn-success">
      <span class="glyphicon glyphicon-upload"></span>
      Register a new results applications
    </a>
  </h1>

  <% if @results_apps.empty? %>
      <p>
        <div class="alert alert-warning">
          Currently no results applications are registered with the system.
        </div>
      </p>
  <% else %>
      <div class="media">
        <table class="table table-hover">

          <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Description</th>
            <th>Results App Connector</th>
            <th>Usable</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% i = 1 %>
          <% @results_apps.each do |results_app| %>
          <%# r_app_connector =  ResultsApp.find(results_app.id).results_app_connector %>
              <tr>
                <td><%= i %></td>
                <td><%= results_app.name %></td>
                <td><%= results_app.description %></td>
                <td><%= results_app.results_app_connector.name%></td>
                <td><%= results_app.usable ? 'True' : 'False'%></td>
                <td><%= link_to 'Show', results_app, :class => "btn btn-xs btn-default"  %></td>
                <td><%= link_to 'Edit', edit_results_app_path(results_app), :class => "btn btn-xs btn-warning"  %></td>
                <td><%= link_to 'Destroy', results_app, method: :delete, :class => "btn btn-xs btn-danger", data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% i = i + 1 %>
          <% end %>
          </tbody>
        </table>
      </div>
  <% end %>
</div>
