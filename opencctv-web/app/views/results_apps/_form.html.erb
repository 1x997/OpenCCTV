<%= form_for(@results_app) do |f| %>
  <% if @results_app.errors.any? %>
        <div id="error_explanation" class="alert alert-danger" role="alert">
      <h2><%= pluralize(@results_app.errors.count, "error") %> prohibited this results application from being saved:</h2>

      <ul>
      <% @results_app.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :results_app_connector_id, 'Results application connector' %><br>
    <%= f.collection_select(:results_app_connector_id, ResultsAppConnector.where('verified = 1'), :id, :name, {prompt: 'Select Connector Type'}, {:disabled => params[:action]=="edit"}) %>
    <% if (params[:action]=='edit') %>
        <%= "(#{@results_app.results_app_connector.name})" %>
    <% end %>
    <%#= f.text_field :results_app_connector_id %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <% if isOrganization? %>
      <%= f.label :group_user_id, 'Created as' %>
      <br>

      <%= f.collection_select(:group_user_id, GroupUser.getGroupUserListSelection(session[:org_id], current_user.id),
                              :id, :title, {:selected => @results_app.group_user_id}) %>

      <br/>
  <% end %>

  <br/>
  <div class="actions">
    <%= f.submit "Save Results Application", :class => "btn btn-success btn-mini" %>
    <%= link_to 'Cancel', :back, :class => "btn btn-danger" %>
  </div>
<% end %>
