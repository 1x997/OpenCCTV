<div class="container">
  <ol class="breadcrumb">
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'Results application connectors', results_app_connectors_path%></li>
    <li class="active">Edit results application connector</li>
  </ol>
</div>

<div class="container">
  <h1>Edit the results application connector information</h1>
  <%= form_for(@results_app_connector) do |f| %>
      <!--Form fields-->
      <div class="field">
        <%= f.label 'Name*' %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description %>
      </div>

      <!--Submit button-->
      <p>
      <div class="actions">
        <%= f.submit 'Update', :class => 'btn btn-success btn-mini'%>
        <%= link_to 'Cancel', @results_app_connector, :class => "btn btn-danger" %>
      </div>
      </p>
  <% end %> <!--Form ends-->

  <br>
  <div>
    <strong>Changing results application connector plugin archive zip file:</strong> <br>
    If you need to change the results application connector archive, please
    <%= link_to 'Delete', @results_app_connector, method: :delete, :class => "btn btn-xs btn-danger", data: { confirm: 'Are you sure?' } %>
    the current results application connector and upload a new archive.
    <p>
      <strong>Archive validation info:</strong>
      <% if(@results_app_connector.verified?) %>
        <span class="label label-success">
          <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
          Verified
        </span>
      <% else %>
        <span class="label label-danger">
          <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
          Invalid
        </span>
      <% end %>
    </p>
    <p>
      <% if (!@results_app_connector.log.nil?) %>
          <% if (@results_app_connector.verified?) %>
            <div class="alert alert-success">
              <samp>
                <%= @results_app_connector.log.html_safe %>
              </samp>
            </div>
        <% else %>
            <div class="alert alert-danger">
              <samp>
                <%= @results_app_connector.log.html_safe %>
              </samp>
            </div>
        <% end %>
    <% else %>
        <div class="alert alert-warning">
          No details available for this results apllication connector plugin.
        </div>
    <% end %>
    </p>
  </div>
</div>

