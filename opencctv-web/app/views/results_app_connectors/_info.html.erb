<div class="container">
  <h1>
    Results application connector information
    <a href="<%=edit_results_app_connector_path(@results_app_connector)%>" class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
  </h1>
  <p>
    <strong>Name:</strong>
    <%= @results_app_connector.name %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @results_app_connector.description %>
  </p>
  <p>
    <strong>Verification result:</strong>
    <% if(@results_app_connector.verified?) %>
                    <span class="label label-success">
                    <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
                    Verified
                  </span>
    <% else %>
                    <span class="label label-danger">
                    <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
                    Invalid
                  </span>
    <% end %>
  </p>
  <p>
    <% if (!@results_app_connector.log.nil?) %>
        <% if (@results_app_connector.verified?) %>
          <div class="alert alert-success">
            <samp>
              <%= @results_app_connector.log.html_safe %>
            </samp>
          </div>
      <% else %>
          <div class="alert alert-danger">
            <samp>
              <%= @results_app_connector.log.html_safe %>
            </samp>
          </div>
      <% end %>
  <% else %>
      <div class="alert alert-warning">
        No details available for this results apllication connector plugin.
      </div>
  <% end %>
  </p>
</div>